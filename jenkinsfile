pipeline {
    agent any
    
    tools {nodejs "node"}
    
    stages {
	stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }
        stage('Cloning Git') {
            steps {
                git 'https://github.com/leopet-devs/leopet-backend'
            }
        }
        stage('Install Dependencies'){
            steps {
                sh 'npm install'
            }
        }
        stage ('Test') {
            steps {
                sh 'npm test'
            }
        }
    }
}

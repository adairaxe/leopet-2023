pipeline {
    agent any
    
    tools {nodejs "node"}
    
    stages {
	stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }
        stage('Cloning Git') {
            steps {
                git branch: 'main, credentialsId: '57d8a65a-a516-4b08-9f42-b6f1290fa293', url: 'https://github.com/leopet-devs/leopet-backend'
            }
        }
        stage('Install Dependencies'){
            steps {
                sh 'npm install'
            }
        }
        stage ('Test') {
            steps {
                sh 'npm test'
            }
        }
    }
}
